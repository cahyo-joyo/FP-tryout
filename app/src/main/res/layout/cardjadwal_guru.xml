<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/headTanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="20 Juni 2020"
        android:visibility="gone"
        android:background="@color/putih_abu"
        android:textColor="@color/hitam"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="10dp"
        />
    <androidx.cardview.widget.CardView
        app:cardElevation="3dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/namaMapel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Mata Pelajaran"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/namaKelas"
                android:layout_below="@id/namaMapel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IPA II"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/tanggal"
                android:layout_below="@id/namaKelas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 Juni 2020"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/jam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:00 WIB"
                android:layout_marginEnd="15dp"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@color/hitam"
                android:background="@drawable/box_putih_abu"
                android:padding="10dp"/>
        </RelativeLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/btn_tambah_ajukanMapel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_ajukanmapel"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/status_ajukanMapel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Diajukan"
            android:textColor="@color/putih"
            android:background="@drawable/box_kuning"
            android:layout_marginRight="15dp"
            android:padding="5dp"
            />

        <ImageView
            android:visibility="gone"
            android:id="@+id/btn_detail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_edit"
            android:layout_marginRight="15dp"
            android:background="@drawable/box_putih_abu"
            />
    </androidx.cardview.widget.CardView>

</LinearLayout>